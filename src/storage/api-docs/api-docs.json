{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel Webhooks API - Moodle & Medusa",
        "description": "API para integración automática de webhooks entre Medusa (e-commerce) y Moodle (LMS)",
        "contact": {
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080",
            "description": "Development"
        },
        {
            "url": "https://api.production.com",
            "description": "Production"
        }
    ],
    "paths": {
        "/api/webhooks/medusa/order-paid": {
            "post": {
                "tags": [
                    "Webhooks"
                ],
                "summary": "Procesa orden pagada de Medusa",
                "description": "Recibe notificación cuando se completa pago, crea usuario en Moodle y lo inscribe en cursos",
                "operationId": "handleOrderPaid",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "customer",
                                    "items"
                                ],
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "order_01HXYZ123"
                                    },
                                    "customer": {
                                        "required": [
                                            "email",
                                            "first_name",
                                            "last_name"
                                        ],
                                        "properties": {
                                            "email": {
                                                "type": "string",
                                                "format": "email"
                                            },
                                            "first_name": {
                                                "type": "string"
                                            },
                                            "last_name": {
                                                "type": "string"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "id": {
                                                    "type": "string"
                                                },
                                                "metadata": {
                                                    "properties": {
                                                        "moodle_course_id": {
                                                            "type": "integer",
                                                            "example": 2
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Webhook aceptado y encolado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "queued"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Webhook duplicado (ya procesado)"
                    },
                    "401": {
                        "description": "Firma inválida"
                    },
                    "422": {
                        "description": "Datos inválidos"
                    }
                },
                "security": [
                    {
                        "webhook_signature": []
                    }
                ]
            }
        },
        "/api/webhooks/medusa/health": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "Verifica estado del servicio",
                "description": "Health check",
                "operationId": "healthCheck",
                "responses": {
                    "200": {
                        "description": "Servicio operativo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "ok"
                                        },
                                        "service": {
                                            "type": "string"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "webhook_signature": {
                "type": "apiKey",
                "description": "HMAC SHA256 signature del payload usando MEDUSA_WEBHOOK_SECRET",
                "name": "X-Medusa-Signature",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Webhooks",
            "description": "Endpoints para recibir eventos de Medusa"
        },
        {
            "name": "Health",
            "description": "Health checks y monitoring"
        }
    ]
}