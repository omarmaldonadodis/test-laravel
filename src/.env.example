# ============================================
# APLICACIÓN
# ============================================
APP_NAME="Laravel Webhooks"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ============================================
# LOGS
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# BASE DE DATOS (PostgreSQL)
# ============================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# ============================================
# SESIÓN
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# BROADCASTING
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=local

# ============================================
# QUEUE (Redis) ✅ CONFIGURADO
# ============================================
QUEUE_CONNECTION=redis
REDIS_QUEUE=default
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE_RETRY_AFTER=90

# ============================================
# CACHE
# ============================================
CACHE_STORE=database
# CACHE_PREFIX=

# ============================================
# REDIS ✅ CONFIGURADO
# ============================================
REDIS_CLIENT=predis
REDIS_HOST=laravel-redis
REDIS_PORT=6379
# REDIS_PASSWORD=null
# REDIS_DB=0

# ============================================
# MEMCACHED (No usado actualmente)
# ============================================
MEMCACHED_HOST=127.0.0.1

# ============================================
# MAIL
# ============================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS (No usado actualmente)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# VITE
# ============================================
VITE_APP_NAME="${APP_NAME}"


# ============================================
# MOODLE ✅ CONFIGURADO
# ============================================
# URL del contenedor Moodle en Docker
# Ejemplo: http://moodle-docker-webserver-1
MOODLE_URL=http://your-moodle-container

# Token generado en Moodle > Web Services > Tokens
# Debe tener permisos para: create_users, get_users_by_field, enrol_users, etc.
MOODLE_TOKEN=your_moodle_token_here

# Nombre del Custom Service creado en Moodle
MOODLE_SERVICE=your_service_name

# ID del curso por defecto donde se inscribirán los usuarios
# Obtenerlo de: Moodle > Cursos > Gestionar cursos
MOODLE_DEFAULT_COURSE_ID=2

# Timeout para requests a Moodle API (segundos)
MOODLE_TIMEOUT=30

# Tiempo de cache para datos de Moodle (segundos)
MOODLE_CACHE_TTL=3600

# Rate Limiting para proteger la API de Moodle
MOODLE_RATE_LIMIT_ENABLED=true
MOODLE_RATE_LIMIT_MAX_ATTEMPTS=60
MOODLE_RATE_LIMIT_DECAY_SECONDS=60

# ============================================
# MEDUSA ✅ CONFIGURADO
# ============================================
# URL del contenedor Medusa en Docker
# Ejemplo: http://medusa_backend:9000
MEDUSA_URL=http://your-medusa-container:9000

# Publishable Key de Medusa (opcional, para frontend)
# Obtenerlo de: Medusa Admin > Settings > API Keys
MEDUSA_PUBLISHABLE_KEY=

# Secret para validar webhooks de Medusa (HMAC SHA256)
# Obtenerlo de: Medusa Admin > Settings > Webhooks
# IMPORTANTE: Mantener en secreto
MEDUSA_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# WEBHOOKS (Laravel interno)
# ============================================
# Secret interno de Laravel para validación adicional
WEBHOOK_SECRET=your_internal_webhook_secret

# Secret alternativo si es necesario
LARAVEL_WEBHOOK_SECRET=your_laravel_webhook_secret

# ============================================
# CORS 
# ============================================
# Orígenes permitidos para CORS (separados por coma)
# Ajustar según los nombres de tus contenedores Docker
CORS_ALLOWED_ORIGINS=http://localhost:9000,http://localhost:3000